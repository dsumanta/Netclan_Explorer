<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            >


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="15dp"
                android:text="+ INVITE"
                android:background="@android:color/transparent"
                android:textColor="#1C0447"
                android:textSize="14sp"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="54dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SURAJ KUMAR BEHERA"
                        android:textSize="17sp"
                        android:id="@+id/name"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/about_1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Rourkela industrial township"
                            android:fontFamily="sans-serif-light"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/about_2"
                            android:fontFamily="sans-serif-light"
                            android:text="Business"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Within"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textSize="13sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/distance"
                            android:text="9.0 KM"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textSize="13sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="10dp"
                            android:padding="20dp"
                            android:layout_marginStart="10dp"
                            android:backgroundTint="#E8E8F4"

                            app:cardCornerRadius="50dp"
                            android:elevation="7dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:backgroundTint="#7C3EEA"
                                />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
                <GridLayout
                    android:id="@+id/set_hobbies_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="8dp"
                    android:columnCount="8"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hobbie_1"
                        android:text="coffee"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:textSize="13dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hobbie_2"
                        android:text="Business"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:textSize="13dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hobbie_3"
                        android:text="Friendship"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:textSize="13sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hobbie_4"
                        android:text="Movies"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:textSize="13sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hobbie_5"
                        android:text="dating"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:textSize="13sp"/>

                </GridLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:id="@+id/community"
                        android:text="Rourkela industrial township"
                        android:fontFamily="sans-serif-light"/>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="89dp"
            android:layout_height="89dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center_vertical"
            android:elevation="10dp"
            app:cardBackgroundColor="#3FCABD"
            app:cardElevation="20dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:id="@+id/image"
                    android:text="SB"
                    app:layout_constraintStart_toStartOf="parent"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </FrameLayout>

</RelativeLayout>