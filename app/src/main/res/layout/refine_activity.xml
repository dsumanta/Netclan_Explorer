<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    tools:context=".RefineActivity"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#251147">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/back_to_mainactivity"

            android:background="@drawable/baseline_navigate_before_24">

        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E4DBDB"
            android:text="Refine"
            android:textSize="15sp"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#230557"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Select Your Availability">

    </TextView>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/circular_background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Your Status"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:textColor="#320681"
        android:textSize="15sp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi community i am open to new connection"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:layout_marginLeft="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:maxLength="250"
            android:paddingLeft="10dp"
            android:background="@drawable/circular_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usedCharactersTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40" />

            <TextView
                android:id="@+id/remainingCharactersTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/250" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Hyper Local Distance"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:textColor="#320681"
        android:textSize="15sp">

    </TextView>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:value="20"
        android:valueFrom="1"
        android:valueTo="100" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_gravity="left"
            android:text="1km" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="100km"
            android:layout_weight="1"
            android:gravity="right" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Purpose"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:textColor="#320681"
        android:textSize="15sp">

    </TextView>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:rowCount="3"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/purpose1"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_background"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textColor="#473B3B"
            android:text="Coffee"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/purpose2"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_background"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textColor="#473B3B"
            android:layout_columnWeight="1"
            android:text="Business"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/purpose3"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_background"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textColor="#473B3B"
            android:layout_columnWeight="1"
            android:text="Hobbies"
            />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/purpose4"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_background"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textColor="#473B3B"
            android:layout_columnWeight="1"
            android:text="Friendship"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/purpose5"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_background"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textColor="#473B3B"
            android:layout_columnWeight="1"
            android:text="Movies"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/purpose6"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_background"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textColor="#473B3B"
            android:layout_columnWeight="1"
            android:text="Dining"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/purpose7"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_background"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textColor="#473B3B"
            android:layout_columnWeight="1"
            android:text="Dating"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/purpose8"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_background"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:layout_columnWeight="1"
            android:textColor="#473B3B"
            android:text="Matrimony"
            />


    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:id="@+id/Sav_Explore"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_circle"
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:text="Save &amp; Explore" />

</LinearLayout>
